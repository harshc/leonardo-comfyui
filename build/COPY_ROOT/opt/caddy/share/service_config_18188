:!PROXY_PORT {
    import universal-config
    
    @openapi {
        path /openapi.json
    }

    @rp-api {
        path /rp-api*
    }
    
    header @authenticating_bearer Set-Cookie "leonardo_token={$WEB_TOKEN}; Path=/ ;Max-Age=604800; HttpOnly; SameSite=lax"
    header @authenticating_basic Set-Cookie "leonardo_token={$WEB_PASSWORD_B64}; Path=/ ;Max-Age=604800; HttpOnly; SameSite=lax"
    
    route @preauth {
       redir @authorized /
    }
    
    route @default {
        reverse_proxy @authorized localhost:!LISTEN_PORT
        redir {$SERVICEPORTAL_LOGIN}
    }
}